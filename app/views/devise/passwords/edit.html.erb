<h2><%= t 'users.change_password' %></h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

<table class="account_create">

<tr>
  <th><%= f.label :password, t('users.th.password_new') %></th>
  <td><%= f.password_field :password, :autofocus => true %></td>
</tr>

<tr>
  <th><%= f.label :password_confirmation, t('users.th.password_confirmation') %></th>
  <td><%= f.password_field :password_confirmation %></td>
</tr>

<tr>
  <td colspan="2"><%= f.submit t('users.button.change_password') %></td>
</tr>

</table>
<% end %>

<%= render "devise/shared/links" %>
